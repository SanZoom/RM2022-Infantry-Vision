    <min_shot_vane_contour_rrect_ratio>0.7</min_shot_vane_contour_rrect_ratio>
    <max_shot_vane_contour_rrect_ratio>0.9</max_shot_vane_contour_rrect_ratio> <!-- 等2-->

    <max_diff_distance_ratio>1.0</max_diff_distance_ratio>


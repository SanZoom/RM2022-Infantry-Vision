    <exposure_time>5000</exposure_time> <!-- us -->

    <w_auto>0</w_auto>
    <w_red>1.98</w_red>
    <w_green>1.0</w_green>
    <w_blue>1.98</w_blue>

    <gain_auto>0</gain_auto>
